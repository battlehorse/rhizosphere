<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'>
  <ui:style>
    .headerbar {
       background-image: literal("-webkit-gradient(linear, 0 0, 0 100%, from(#E1E3EC), to(#fff))");
       background-image: literal("-moz-linear-gradient(-90deg, #E1E3EC, #fff)");
       background-color: #fff;
     }
     .headerbar H1 {
       font-family: 'Lobster', sans-serif;
       font-size: 3em;
       font-weight: normal;
       margin-right: 1em;
       margin-top: 0.3em;
       float: right;
     }
     .highlight {
       color: #6B90DA
     }
     
     .tagline {
       margin: 1em;
     }
     
    .tagline A, .tagline A:visited {
       color: #000;
       text-decoration: none;
    }
    
    .tagline A:hover {
      text-decoration: underline;
    }
  </ui:style>

  <div class="{style.headerbar}">
    <h1>Rhizosphere <span class="{style.highlight}">GWT showcase</span></h1>
    <p class="{style.tagline}">
      <a href="http://site.rhizospherejs.com" target="_blank">
        Learn more about Rhizosphere</a> ::
      <a href="http://www.rhizospherejs.com" target="_blank">Other demos</a> ::
      <a href="http://docs.rhizospherejs.com" target="_blank">Docs</a> ::
      <a href="http://code.rhizospherejs.com" target="_blank">Source code</a>
    </p>
  </div>
</ui:UiBinder>